
<div class="wrapper main" ng-repeat="post in posts | orderBy: '-date':true">
  <span style="font-size:20px; margin-left:10px;" >
     <a ng-show="post.title"  href="#/posts/{{post._id}}">
        <h3> {{post.title}}</h3> 
     </a>
  </span>  
  <span style="float: right;" ng-show="isLoggedIn()" ng-click="deletePost(post)">
      <img src="https://image.flaticon.com/icons/svg/133/133350.svg" alt="placeholder image" width="32" height="32"> 
  </span>
  <span>
       <a style="float: right;" ng-show="isLoggedIn()" href="#/update/{{post._id}}">
          <img src="https://image.flaticon.com/icons/svg/133/133330.svg" alt="placeholder image" width="32" height="32"> </a>
  </span>
  <span> <p ng-show="post.author">  by {{post.author}} |</span>
   <span ng-show="post.posted">  {{post.posted | date:'dd/MMM/yyyy'}} | </p></span>
 
</div>

<form  ng-show="isLoggedIn()" ng-submit="addPost()" style="margin-top:30px;" class ="col-md-8 col-md-offset-2">
  <h3>Add a new post</h3>

  <div class="form-group">
    <input type="text"    class="form-control"    placeholder="Title"  ng-model="title">
    </input>
  </div>
  <div class ="form-group">
    <textarea type="text" rows="10"  class="form-control"   placeholder="Body"   ng-model="body"> </textarea>
  </div>
    <button id="submit" type="submit" class="btn btn-primary btn-block">Post</button>
  <div id="flaticon">Icons and background from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a> licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a></div>

</form>
